{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "noEmit": true,
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"]
    },
    "resolveJsonModule": true,
    "types": ["@types/node", "@nuxt/types", "nuxt-i18n", "@nuxtjs/auth-next", "vue-class-component"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "compileOnSave": false,
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.vue"],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
