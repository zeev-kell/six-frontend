{
  "class": "CommandLineTool",
  "cwlVersion": "v1.0",
  "$namespaces": {
    "sbg": "https://www.sevenbridges.com/"
  },
  "baseCommand": ["bowtie2"],
  "inputs": [
    {
      "id": "fastq1",
      "type": "File",
      "inputBinding": {
        "position": 11
      }
    },
    {
      "id": "fastq2",
      "type": "File?",
      "inputBinding": {
        "position": 12,
        "prefix": "-2",
        "valueFrom": "${\n    if ( inputs.is_paired_end ){\n        return self;\n    }\n    else {\n        return null;\n    }\n}  \n"
      }
    },
    {
      "default": true,
      "id": "is_paired_end",
      "type": {
        "items": "long",
        "type": "array"
      }
    },
    {
      "default": 2000,
      "id": "max_mapping_insert_length",
      "type": "int?",
      "inputBinding": {
        "position": 1,
        "prefix": "--maxins"
      },
      "doc": "useful for very long fragments, as expected for ATAC"
    },
    {
      "id": "reference_index",
      "type": "File",
      "inputBinding": {
        "position": 2,
        "prefix": "-x",
        "valueFrom": "$(self.path.replace(/\\.fa/i,\"\"))"
      },
      "doc": "path to the FM-index files for the chosen reference genome",
      "secondaryFiles": [".fai", "^.1.bt2", "^.2.bt2", "^.3.bt2", "^.4.bt2", "^.rev.1.bt2", "^.rev.2.bt2"]
    },
    {
      "id": "threads",
      "type": "int",
      "inputBinding": {
        "position": 0,
        "prefix": "-p"
      },
      "doc": "number of alignment threads to launch"
    },
    {
      "id": "un_conc",
      "type": "string",
      "inputBinding": {
        "position": 0,
        "prefix": "--un-conc-gz"
      }
    }
  ],
  "outputs": [
    {
      "id": "bowtie2_log",
      "type": "stderr"
    },
    {
      "id": "sam",
      "type": "File",
      "outputBinding": {
        "glob": "*.sam"
      }
    },
    {
      "id": "unmap_fq1",
      "type": "File",
      "outputBinding": {
        "glob": "*.1.gz"
      }
    },
    {
      "id": "unmap_fq2",
      "type": "File?",
      "outputBinding": {
        "glob": "*.2.gz"
      }
    }
  ],
  "doc": "bowtie2 is an ultrafast and memory-efficient tool for aligning sequencing reads to long reference sequences",
  "arguments": [
    {
      "position": 1,
      "valueFrom": "--very-sensitive"
    },
    {
      "position": 10,
      "valueFrom": "${\n    if ( inputs.is_paired_end ){\n        return \"-1\";\n    }\n    else {\n        return \"-U\";\n    }\n}\n"
    },
    {
      "position": 6,
      "prefix": "-S",
      "valueFrom": "$(inputs.fastq1.nameroot).sam"
    }
  ],
  "requirements": [
    {
      "class": "ResourceRequirement",
      "ramMin": 30000,
      "coresMin": 4
    },
    {
      "class": "InlineJavascriptRequirement"
    }
  ],
  "hints": [
    {
      "class": "DockerRequirement",
      "dockerPull": "6oclock/bowtie2-light:v2.2.9"
    }
  ],
  "stderr": "$(inputs.fastq1.nameroot).bowtie2_stderr"
}
